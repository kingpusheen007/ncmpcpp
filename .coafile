[c++]
bears = ClangComplexityBear, CPPCheckBear, InvalidLinkBear
files = **.cpp, **.h
use_spaces = false
enable = warning
[c]
bears = ClangComplexityBear, CSecurityBear
files = **.h
use_spaces = false
[yaml]
bears = YAMLLintBear, LineLengthBear
files = **.yml
